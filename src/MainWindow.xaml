<Window x:Class="EmotionEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MoodEditor" Height="350" Width="525"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize" Background="White">
    <Grid Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBox Name="TextEditor" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10"
                 TextChanged="TextEditor_TextChanged" FontSize="20" />
    </Grid>
</Window>
